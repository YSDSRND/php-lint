{
    "name": "ysds/php-lint",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Johan BjÃ¶rk",
            "email": "johanimon@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4.0",
        "friendsofphp/php-cs-fixer": "^3.1.0"
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0"
    },
    "autoload": {
        "psr-4": {
            "YSDS\\Lint\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YSDS\\Lint\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --dry-run --diff --verbose --ansi",
        "test": "phpunit"
    }
}
